<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionDropDownStyle">@style/recipebook_DropDownNav</item>
        <item name="android:actionBarWidgetTheme">@style/recipebook.actionBarWidgetTheme</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/holo_blue_dark</item>
    </style>

    <style name="TextStyle" parent="android:TextAppearance">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="recipebook.actionBarWidgetTheme" parent="AppTheme">
        <item name="android:spinnerDropDownItemStyle">@style/recipebook.Widget.DropDownItem.Spinner</item>
    </style>

    <style name="recipebook_DropDownNav" parent="android:Widget.Holo.Spinner">
        <item name="android:popupBackground">@android:color/holo_blue_dark</item>
        <item name="android:dropDownSelector">@android:color/background_dark</item>
        <item name="android:textAppearance">@style/recipebook.TextAppearance.Widget.DropDownItem</item>
    </style>

    <style name="recipebook.Widget.DropDownItem.Spinner" parent="android:Widget.Holo.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/recipebook.TextAppearance.Widget.DropDownItem</item>
    </style>

    <style name="recipebook.TextAppearance.Widget.DropDownItem" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
